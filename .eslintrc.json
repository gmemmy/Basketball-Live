{
  "parser": "babel-eslint",
  "extends": "react",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "one-var": 0,
    "max-len": [
      1,
      90,
      2
    ],
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "eol-last": 2,
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "info"
        ]
      }
    ],
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  }
}